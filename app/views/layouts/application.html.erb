<!DOCTYPE html>
<html>
  <head>
    <title>RailsAmusementPark</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

          <% if current_user %>  
            <a class="navbar-brand" href="<%= root_url %>"/>Home</a>
            <a class="navbar-brand" href="<%= logout_url %>"/>Log out</a>
            <h3>Welcome <%= current_user.name %></h3>


          <% else %>   
            <a class="navbar-brand" href="<%= root_url %>"/>Home</a>
            <a class="navbar-brand" href="<%= signup_url %>"/>Signup</a>
            <a class="navbar-brand" href="<%= signin_url %>"/>Signin</a>
            </div>
          <% end %>

        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <!-- content -->
    <div class="container"  role="main">
      <%= yield %>
    </div>
  </body>
</html>

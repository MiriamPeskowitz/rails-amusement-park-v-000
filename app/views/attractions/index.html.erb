<h1>Listing attractions</h1>

<table>
	<thead>
		<tr>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>Name</td>
			<td>Tickets</td>
			<td>Details</td>
		</tr>
		<% @attractions.each do |attraction| %>
		<tr> 
			<td><%= attraction.name %> </td>
			<td><%= attraction.tickets %></td>
			<td><%= link_to "Go on #{attraction.name}", attraction_path(attraction) %></td>
		</tr>
		<% end %>
	</tbody>

</table>

<%= link_to "Edit", New Attraction", new_attraction_path %>
<%= link_to "Delete", attraction_path(@attraction), method: :delete, data: { confirm: 'Are you sure?' }%>
<%= link_to "New Attraction", new_attraction_path %>